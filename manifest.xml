<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<OfficeApp xmlns="http://schemas.microsoft.com/office/appforoffice/1.1"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns:bt="http://schemas.microsoft.com/office/officeappbasictypes/1.0"
           xmlns:mailappor="http://schemas.microsoft.com/office/mailappversionoverrides/1.0"
           xsi:type="MailApp">
  
  <!-- Basic Settings -->
  <Id>56dbd71b-8bab-41f4-868d-cc806382f39b</Id>
  <Version>1.0.0.0</Version>
  <ProviderName>Financial Report Solutions</ProviderName>
  <DefaultLocale>en-US</DefaultLocale>
  
  <!-- Display Name -->
  <DisplayName DefaultValue="Financial Report Generator"/>
  
  <!-- Description -->
  <Description DefaultValue="Self-contained Outlook Add-in that scans inbox for financial data, extracts information from emails and PDF attachments, and generates quarterly, semi-annual, and annual financial statements with universal regulatory compliance."/>
  
  <!-- Icon URLs -->
  <IconUrl DefaultValue="https://localhost:3000/assets/icon-32.png"/>
  <HighResolutionIconUrl DefaultValue="https://localhost:3000/assets/icon-80.png"/>
  
  <!-- Support URL -->
  <SupportUrl DefaultValue="https://github.com/abdulrahman305/outlook-financial-report-addin"/>
  
  <!-- App Domains -->
  <AppDomains>
    <AppDomain>https://localhost:3000</AppDomain>
    <AppDomain>https://cdnjs.cloudflare.com</AppDomain>
  </AppDomains>
  
  <!-- Hosts -->
  <Hosts>
    <Host Name="Mailbox"/>
  </Hosts>
  
  <!-- Requirements -->
  <Requirements>
    <Sets>
      <Set Name="Mailbox" MinVersion="1.3"/>
    </Sets>
  </Requirements>
  
  <!-- Form Settings -->
  <FormSettings>
    <Form xsi:type="ItemRead">
      <DesktopSettings>
        <SourceLocation DefaultValue="https://localhost:3000/taskpane.html"/>
        <RequestedHeight>450</RequestedHeight>
      </DesktopSettings>
    </Form>
  </FormSettings>
  
  <!-- Permissions -->
  <Permissions>ReadWriteMailbox</Permissions>
  
  <!-- Rule -->
  <Rule xsi:type="RuleCollection" Mode="Or">
    <Rule xsi:type="ItemIs" ItemType="Message" FormType="Read"/>
  </Rule>
  
  <!-- Version Overrides -->
  <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides" xsi:type="VersionOverridesV1_0">
    <VersionOverrides xmlns="http://schemas.microsoft.com/office/mailappversionoverrides/1.1" xsi:type="VersionOverridesV1_1">
      
      <!-- Requirements -->
      <Requirements>
        <bt:Sets DefaultMinVersion="1.3">
          <bt:Set Name="Mailbox"/>
        </bt:Sets>
      </Requirements>
      
      <!-- Hosts -->
      <Hosts>
        <Host xsi:type="MailHost">
          
          <!-- Desktop Form Factor -->
          <DesktopFormFactor>
            
            <!-- Function File -->
            <FunctionFile resid="Commands.Url"/>
            
            <!-- Extension Point -->
            <ExtensionPoint xsi:type="MessageReadCommandSurface">
              <OfficeTab id="TabDefault">
                <Group id="msgReadGroup">
                  <Label resid="GroupLabel"/>
                  
                  <!-- Task Pane Button -->
                  <Control xsi:type="Button" id="msgReadOpenPaneButton">
                    <Label resid="TaskpaneButton.Label"/>
                    <Supertip>
                      <Title resid="TaskpaneButton.Label"/>
                      <Description resid="TaskpaneButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ShowTaskpane">
                      <SourceLocation resid="Taskpane.Url"/>
                    </Action>
                  </Control>
                  
                  <!-- Action Button -->
                  <Control xsi:type="Button" id="ActionButton">
                    <Label resid="ActionButton.Label"/>
                    <Supertip>
                      <Title resid="ActionButton.Label"/>
                      <Description resid="ActionButton.Tooltip"/>
                    </Supertip>
                    <Icon>
                      <bt:Image size="16" resid="Icon.16x16"/>
                      <bt:Image size="32" resid="Icon.32x32"/>
                      <bt:Image size="80" resid="Icon.80x80"/>
                    </Icon>
                    <Action xsi:type="ExecuteFunction">
                      <FunctionName>action</FunctionName>
                    </Action>
                  </Control>
                  
                </Group>
              </OfficeTab>
            </ExtensionPoint>
          </DesktopFormFactor>
          
        </Host>
      </Hosts>
      
      <!-- Resources -->
      <Resources>
        <bt:Images>
          <bt:Image id="Icon.16x16" DefaultValue="https://localhost:3000/assets/icon-16.png"/>
          <bt:Image id="Icon.32x32" DefaultValue="https://localhost:3000/assets/icon-32.png"/>
          <bt:Image id="Icon.80x80" DefaultValue="https://localhost:3000/assets/icon-80.png"/>
        </bt:Images>
        <bt:Urls>
          <bt:Url id="Commands.Url" DefaultValue="https://localhost:3000/commands.html"/>
          <bt:Url id="Taskpane.Url" DefaultValue="https://localhost:3000/taskpane.html"/>
        </bt:Urls>
        <bt:ShortStrings>
          <bt:String id="GroupLabel" DefaultValue="Financial Reports"/>
          <bt:String id="TaskpaneButton.Label" DefaultValue="Generate Financial Report"/>
          <bt:String id="ActionButton.Label" DefaultValue="Quick Scan"/>
        </bt:ShortStrings>
        <bt:LongStrings>
          <bt:String id="TaskpaneButton.Tooltip" DefaultValue="Scan inbox for financial data and generate comprehensive financial statements."/>
          <bt:String id="ActionButton.Tooltip" DefaultValue="Quickly scan current email for financial data."/>
        </bt:LongStrings>
      </Resources>
      
    </VersionOverrides>
  </VersionOverrides>
  
</OfficeApp>
